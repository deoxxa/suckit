#!/usr/bin/env node

var log = require("leg")(),
    path = require("path"),
    suckit = require(path.join(__dirname, "..", "suckit"));

if (process.argv.length >= 4) {
  var server = suckit.createServer({dataPath: path.join(process.cwd(), process.argv[3])});

  server.on("log", log);

  server.listen(process.argv[2], function() {
    log.info("started", {session: this.sessionId, dataPath: this.dataPath, port: this.address().port});
  });
} else {
  console.log("usage: suckit <port> <path>");
  process.exit(1);
}
